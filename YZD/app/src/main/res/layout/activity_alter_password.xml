<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@android:color/white" />
    <com.android.yzd.ui.view.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setBackground="@android:color/white"
        app:setLeftImage="@mipmap/arrow_left_black"
        app:setTitle="修改登录密码"
        app:setTitleColor="@color/black_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="30dp">


        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/round_background"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="10dp"
            android:hint="请输入原密码"
            android:paddingLeft="10dp"
            android:textColor="@color/black_30"
            android:textColorHighlight="@color/black_60"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_background"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="10dp"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/black_30"
            android:textColorHighlight="@color/black_60"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/again_new_password"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_background"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="10dp"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/black_30"
            android:textColorHighlight="@color/black_60"
            android:textSize="13sp" />

    </LinearLayout>


    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ripple_green"
        android:onClick="onClick"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

</LinearLayout>
