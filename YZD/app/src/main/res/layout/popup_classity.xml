<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/classity_popu"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableLeft="@mipmap/menu_refresh"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="刷新"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/popup_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableLeft="@mipmap/menu_classify"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="消息"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/popup_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableLeft="@mipmap/menu_home"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="首页"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
