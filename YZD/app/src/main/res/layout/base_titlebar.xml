<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_rl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/titleBar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@mipmap/arrow_left_white" />

    <TextView
        android:id="@+id/titleBar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/titleBar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:text="右边"
        android:textColor="@android:color/white"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/titleBar_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp" />


    <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/titleBar_right_text"
        android:layout_toRightOf="@+id/titleBar_back">

        <EditText
            android:id="@+id/titleBar_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_search"
            android:paddingLeft="10dp"
            android:textColor="@color/black_30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/titleBar_edit_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/black_90"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/white_30" />
</RelativeLayout>
