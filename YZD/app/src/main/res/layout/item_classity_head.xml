<?xml version="1.0" encoding="utf-8"?>
<com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/optimization_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:alpha="0.5"
            android:background="@color/translucence_a"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/optimization_prompt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小小浴室   温情浪漫"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/optimization_prompt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optimization_prompt_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="一单搞定整个浴室"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/optimization_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optimization_prompt_2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/home_select_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optimization_recycler"
                android:layout_marginTop="10dp"
                android:background="@drawable/line_round_white"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/home_select_details"
                android:textColor="@android:color/white"
                android:textSize="8sp" />
        </LinearLayout>

    </FrameLayout>
</com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>
