<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/classify_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@mipmap/classify" />

        <RelativeLayout
            android:id="@+id/classify_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/classify_more"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="搜索"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black_90"
                android:textSize="14sp" />
        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/classify_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:overScrollMode="never" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/classify_contents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

            <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
                android:id="@+id/recycler_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:id="@+id/head_content"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <ImageView
                        android:id="@+id/optimization_goods"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="20dp"
                        android:alpha="0.5"
                        android:background="@color/translucence_a"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/optimization_prompt_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小小浴室   温情浪漫"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/optimization_prompt_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/optimization_prompt_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="一单搞定整个浴室"
                            android:textColor="@android:color/white"
                            android:textSize="10sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/optimization_recycler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/optimization_prompt_2"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/home_select_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/optimization_recycler"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/line_round_white"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/home_select_details"
                            android:textColor="@android:color/white"
                            android:textSize="8sp" />
                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/head_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black_60"
                    android:textSize="13sp" />
            </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>

        </FrameLayout>


    </LinearLayout>


</LinearLayout>
