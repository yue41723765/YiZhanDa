<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/hot_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/hot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hot_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/hot_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="标题"
        android:textColor="@color/black_30"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hot_image"
        android:layout_toRightOf="@+id/hot_image">

        <TextView
            android:id="@+id/hot_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textColor="@color/red_30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hot_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hot_price"
            android:layout_alignParentRight="true"
            android:text="付款人数"
            android:textColor="@color/black_60"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/hot_image"
        android:layout_below="@+id/hot_image"
        android:background="@color/white_30" />
</RelativeLayout>
