<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="13%"
            android:pivotY="-40%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:width="15dp"
                    android:height="15dp" />
                <stroke
                    android:width="10dp"
                    android:color="#F000" />

                <solid android:color="@color/translucence_a" />
            </shape>
        </rotate>
    </item>
</layer-list>